<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/messName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/messCost"
        app:layout_constraintStart_toStartOf="@+id/messCost"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/messHead"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Head"
        android:inputType="textPersonName"
        app:layout_constraintStart_toStartOf="@+id/messName"
        app:layout_constraintTop_toBottomOf="@+id/messName" />

    <EditText
        android:id="@+id/messCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="Cost"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/messHead" />

    <EditText
        android:id="@+id/messCap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Capacity"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/messCost"
        app:layout_constraintTop_toBottomOf="@+id/messCost" />

    <EditText
        android:id="@+id/nonveg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:ems="10"
        android:hint="Non veg"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/messCap"
        app:layout_constraintTop_toBottomOf="@+id/messCap" />

    <Button
        android:id="@+id/addMess"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Add"
        app:layout_constraintStart_toStartOf="@+id/nonveg"
        app:layout_constraintTop_toBottomOf="@+id/nonveg" />
</android.support.constraint.ConstraintLayout>