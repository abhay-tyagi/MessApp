<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <EditText
        android:id="@+id/billUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="67dp"
        android:ems="10"
        android:hint="Name"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="@+id/messCost"
        app:layout_constraintStart_toStartOf="@+id/messCost"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/billMainCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Main Cost"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="@+id/billUser"
        app:layout_constraintTop_toBottomOf="@+id/billUser" />

    <EditText
        android:id="@+id/billExtrasCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:ems="10"
        android:hint="Extras Cost"
        android:inputType="number"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/billMainCost" />

    <EditText
        android:id="@+id/billDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:ems="10"
        android:hint="Date"
        android:inputType="date"
        app:layout_constraintStart_toStartOf="@+id/billExtrasCost"
        app:layout_constraintTop_toBottomOf="@+id/billExtrasCost" />

    <Button
        android:id="@+id/addBill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:text="Add"
        app:layout_constraintStart_toStartOf="@+id/billDate"
        app:layout_constraintTop_toBottomOf="@+id/billDate" />
</android.support.constraint.ConstraintLayout>